<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Detailed">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardView"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp">


                        <ProgressBar
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:id="@+id/loader"/>

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />



                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient"/>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_gravity="bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvSource"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/g_light"
                                android:text="Worldom."
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                android:layout_marginLeft="300dp"/>


                        </LinearLayout>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country"
                        android:padding="10dp"
                        android:textSize="20dp"
                        android:fontFamily="@font/g_bold"
                        android:textColor="@color/black"
                        android:id="@+id/tvCountry"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Covid 19 Pandemic Situation"
                        android:textSize="15dp"
                        android:padding="10dp"
                        android:fontFamily="@font/g_light"
                        android:textColor="@color/black"
                        android:id="@+id/tvDesc"/>
                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <GridLayout
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="3"
                android:columnCount="2">
                <androidx.cardview.widget.CardView
                    android:layout_margin="20dp"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:cardBackgroundColor="#fce91e"
                    app:cardElevation="4dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="6dp">

                    <LinearLayout android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Confirmed"
                            android:layout_marginBottom="10dp"/>


                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/confirmed_id"
                            android:text="cases"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="20dp"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:cardElevation="4dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#e8de27"
                    app:cardCornerRadius="6dp">

                    <LinearLayout android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Active"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"/>


                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/active_id"
                            android:text="cases"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="20dp"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:cardElevation="4dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#ef0e0e"
                    app:cardCornerRadius="6dp">

                    <LinearLayout android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Death"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"/>


                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/dead_id"
                            android:text="cases"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_margin="20dp"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#0eef7b"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="6dp">

                    <LinearLayout android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Recovered"
                            android:layout_marginLeft="0dp"
                            android:layout_marginBottom="10dp"/>


                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/recovered_id"
                            android:text="cases"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_margin="20dp"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#ef7f0e"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="6dp">

                    <LinearLayout android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Tested"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"/>


                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/tested_id"
                            android:text="cases"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_margin="20dp"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#fc1e5d"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="6dp">

                    <LinearLayout android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Critical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"/>


                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/critical_id"
                            android:text="cases"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </GridLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>